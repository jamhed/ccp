#!/bin/bash
# List all open issues (non-archived)

ISSUES_DIR="${ISSUES_DIR:-issues}"

if [ ! -d "$ISSUES_DIR" ]; then
  echo "No issues directory found at: $ISSUES_DIR"
  exit 1
fi

for issue in "$ISSUES_DIR"/*; do
  [ -d "$issue" ] || continue
  issue_name=$(basename "$issue")

  if [ -f "$issue/problem.md" ]; then
    echo "$issue_name"
  fi
done
